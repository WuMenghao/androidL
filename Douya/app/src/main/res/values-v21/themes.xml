<resources>

    <style name="PreferenceFixTheme.DialogWhenLarge" parent="Theme.AppCompat.DialogWhenLarge">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage</item>
    </style>

    <style name="PreferenceFixTheme.Light.DialogWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage</item>
    </style>

    <style name="PreferenceFixTheme.Light.DarkActionBar.DialogWhenLarge" parent="Theme.AppCompat.Light.DarkActionBar.DialogWhenLarge">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage</item>
    </style>

    <style name="Theme.Douya.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Douya.ScrimStatusBar">
        <item name="android:statusBarColor">@color/system_window_scrim</item>
    </style>

    <style name="Theme.Douya.MainActivity.ColdStart">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/window_background_statusbar_toolbar_tab</item>
    </style>

    <style name="Theme.Douya.BroadcastActivity" parent="Theme.Douya.DarkBackground">
        <item name="android:statusBarColor">?colorPrimaryDark</item>
    </style>

    <style name="Theme.Douya.Gallery" parent="Base.Theme.Douya.Gallery">
        <item name="android:navigationBarColor">@color/dark_70_percent</item>
        <item name="android:statusBarColor">@color/dark_70_percent</item>
    </style>
</resources>
